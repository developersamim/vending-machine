@model identity_server.Models.UserRegistrationModel

<div class="register-page">
    <div class="lead">
        @*<img class="logo center"
             src="~/images/logo.png"
             alt="Project Barnyard">*@
        <h3 class="center-heading">Vending Machine</h3>
        <p class="register">Sign Up</p>
    </div>

    <partial name="_ValidationSummary" />

    @*<div id="other-sign-up">
        <div class="segment"><img src="~/images/facebook--v1.png"></div>
        <div class="segment"><img src="~/images/google-plus--v1.png"></div>
        <div class="segment"><img src="~/images/twitter-squared.png" /></div>
    </div>*@

    @*<div id="other-sign-up">
        <div class="segment"><hr /></div>
        <div class="segment"><small><small>Or sign up with</small></small></div>
        <div class="segment"><hr /></div>
    </div>*@

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="Register">
                        <fieldset>
                            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />

                            <div class="form-group">
                                <input class="form-control input-bottom" placeholder="First Name" asp-for="FirstName" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control input-bottom" placeholder="Last Name" asp-for="LastName">
                            </div>
                            <div class="form-group">
                                <input class="form-control input-bottom" placeholder="Email" asp-for="Email">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control input-bottom" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control input-bottom" placeholder="Confirm password" asp-for="ConfirmPassword" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <small>Please read our <a href="">terms and conditions</a> and <a href="">privacy policy</a>.</small>
                            </div>
                            <button class="btn btn-primary" name="button" value="login">Login</button>
                            <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>